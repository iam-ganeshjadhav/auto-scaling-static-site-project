pipeline {
    agent any
    
    stages {

        stage('Checkout Website Code') {
            steps {
                git branch: 'main', url: 'https://github.com/iam-ganeshjadhav/auto-scaling-static-site-project.git'
            }
        }

        stage('Verify Files') {
            steps {
                sh '''
                echo "Website files downloaded:"
                ls -l
                '''
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/*', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "Pipeline successful â€” website code validated!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
